<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context="com.hackcmu.cmfud.RestaurantActivity"
    android:id="@+id/restaurant_base_layout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cmu_red"
        android:padding="40dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:id="@+id/restaurant_textview" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="FIND OUT EVERYTHING ABOUT YOUR RESTAURANT, RIGHT NOW."
        android:gravity="center"
        android:textColor="@color/cmu_red"
        android:textSize="11sp"
        android:id="@+id/textView" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:stretchMode="spacingWidthUniform"
        android:columnCount="2"
        android:rowCount="2">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/menu_image_button"
            android:layout_gravity="center"
            android:background="@drawable/menuicon"
            android:layout_row="0"
            android:layout_column="0" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/hours_image_button"
            android:layout_gravity="center"
            android:background="@drawable/hoursicon"
            android:layout_row="0"
            android:layout_column="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/lines_image_button"
            android:layout_gravity="center"
            android:background="@drawable/linesicon"
            android:layout_row="1"
            android:layout_column="0" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/seats_image_button"
            android:layout_gravity="center"
            android:background="@drawable/seatsicon"
            android:layout_row="1"
            android:layout_column="1" />
    </GridLayout>

</LinearLayout>
